<section class="dashboard">
    <div class="top">
        <i class="uil uil-bars sidebar-toggle"></i>
		 <h6>{{user.role}}, {{user.fullname}}, {{user.email}}, {{user.ic}}</h6>
    </div>
    <div class="dash-content">
		<div class="overview">
			
			<div class="title">
                <i class="uil uil-clinic-medical"></i>
                <span class="text">Patient List</span>
            </div>
			
			<!-- Patientlist Main View-->
			{{#if removedPatientlist}}
			<div class="container" style="background-color: #ffffff;">
				<div class="alert alert-success alert-dismissible fade show" role="alert">
					<strong>Success! </strong>{{removedPatientlist}}
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			</div>
			{{/if}}

			{{#if alert}}

			<br><br>
			<ol class="breadcrumb" style="background-color: #ffffff;">
				<li class="breadcrumb-item"><a href="/admin/patientlist">Back to Patient List</a></li>
				<li class="breadcrumb-item active" aria-current="page">Search Your Patient List Name</li>
			</ol>
			<br>

			<div class="container" style="background-color: #ffffff;">
				<div class="alert alert-success alert-dismissible fade show" role="alert">
					<strong>Success! </strong>{{alert}}
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			</div>
			{{/if}}
			
			<div class="activity">
				
				
				<br>
				
				<!--button for SEARCH -->
				<div class="input-group mb-3">
				<form class="input-group mb-3" method="POST" action="/admin/patientlist/search">
					<input type="search" class="form-control" name="search" placeholder="Search Patient Name" aria-label="Search">
					<div class="input-group-append">
						<span type="submit" class="input-group-text"><i class="bi bi-search"></i></span>
					</div>
				</form>
				</div>
				
				<table class="table table-bordered">
					<thead>
						<tr>
							<!--<th scope="col">#</th>-->
							<th scope="col" class="text-center">Fullname</th>
							<th scope="col" class="text-center">IC</th>
							<th scope="col" class="text-center">Assigned Doctor</th>
							<th scope="col" class="text-center">Phone Number</th>
							<!--column for READ, EDIT, DELETE -->
							<th scope="col" class="text-center">Update</th> 
						</tr>
					</thead>
					
					<tbody>
						
						{{#each rows}}
						<tr>
							<!--<th scope="row">{{{this.id}}}</th>-->
							<td>{{{this.fullname}}}</td>
							<td>{{{this.ic}}}</td>
							<td>{{{this.assignedTo}}}</td>
							<td>{{{this.phone_number}}}</td>
							<td  class="text-center">
								<a href="/admin/patientlist/display/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye-fill"></i></a>
								<a href="/admin/patientlist/update/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pen-fill"></i></a>
								<a href="/admin/patientlist/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-trash-fill"></i></a>
							</td>
						</tr>
						{{/each}}
						
					</tbody>
				</table>
			</div>
		</div>
	</div>
</section>




