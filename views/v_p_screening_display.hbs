<section class="dashboard">
    <div class="top">
        <i class="uil uil-bars sidebar-toggle"></i>
        <h6 style="float: right;">
          {{#if user}}
                {{#if user.image}}
                    <img src="/images/{{user.image}}" class="pp" id="pp" style="height: 30px; width:30px; object-fit: cover; overflow:hidden"/>
                {{else}}
                    <img src="/images/profileimage.png"  class="pp" id="pp" style="height: 30px; width:30px; object-fit: cover; overflow:hidden"/>
                {{/if}}
                {{user.role}}, {{user.fullname}}, {{user.email}}, {{user.ic}}
            {{/if}}
            
            
            {{#each getuser}}
                 {{#if this.image}}
                    <img src="/images/{{this.image}}" class="pp" id="pp" style="height: 30px; width:30px; object-fit: cover; overflow:hidden"/>
                {{else}}
                    <img src="/images/profileimage.png"  class="pp" id="pp" style="height: 30px; width:30px; object-fit: cover; overflow:hidden"/>
                {{/if}}
                {{this.role}}, {{this.fullname}}, {{this.email}}, {{this.ic}}
            {{/each}}
            
             {{#if assignedTo}}
                Assigned to {{assignedTo}}</h6>
            {{/if}}
    </div>
    
    <div class="dash-content">
        <div class="overview">
			
			<div class="title">
                <i class="uil uil-clipboard-alt"></i>
                <span class="text">Display Your Screening Result</span>
            </div>
            
            <br><br>
            <ol class="breadcrumb" style="background-color: #ffffff;">
                <li class="breadcrumb-item"><a href="/profile/display">Back to Profile</a></li>
                <li class="breadcrumb-item"><a href="/screening/view">Back to Screening</a></li>
                <li class="breadcrumb-item active" aria-current="page">Display Screening Result</li>
            </ol>
            <br>

            {{#if alert}}
            <div class="container" style="background-color: #ffffff;">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Success! </strong>{{alert}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
            {{/if}}

            <br>
            <div class="activity">
                {{#each rows}} 
                <div class="row mb-5"> 
                    <div class="col text-center">
                        <h3>Your Score: {{this.score}} %</h3>
                    </div>
                </div>
                <div class="row"> 
                    <div class="col"> 
                        <table class="table table-bordered"> 
                            <thead> 
                                <tr>
                                <th scope="col">Score</th> 
                                <th scope="col">Created on</th> 
                               <!-- <th scope="col">Last Update</th> -->
                                </tr> 
                            </thead> 
                            <tbody> 
                                <tr>
                                <th scope="row">{{this.score}}</th> 
                                <td>{{{this.createdAt}}}</td>
                               <!-- <td>{{this.updatedAt}}</td> -->
                                </tr>
                            </tbody> 
                        </table><br>
                        <center><h5><u><b>Depression Screening Form</b></u></h5></center>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col" class="text-left">1. Do you feel that you donâ€™t look attractive anymore?</th> 
                                    <th scope="col" class="text-left">{{this.depress1}}</th>
                                </tr>
                            </thead>
                            <thead>
                                <tr>
                                    <th scope="col" class="text-left">2. Do you experience emotional changes after undergoing bariatric surgery?</th>                                               
                                    <th scope="col" class="text-left">{{this.depress2}}</th>
                                </tr>
                            </thead>
                            <thead>
                                <tr>
                                    <th scope="col" class="text-left">3. Are you having sleep disturbance after undergoing bariatric surgery?</th>                                                
                                    <th scope="col" class="text-left">{{this.depress3}}</th>
                                </tr>
                            </thead>
                            <thead>
                                <tr>
                                    <th scope="col" class="text-left">4. Are you always tired after undergoing bariatric surgery?</th>                                     
                                    <th scope="col" class="text-left">{{this.depress4}}</th>
                                </tr>
                            </thead>
                            <thead>
                                <tr>
                                    <th scope="col" class="text-left">5. Do you always feel guilty after undergoing bariatric surgery?</th>                                               
                                    <th scope="col" class="text-left">{{this.depress5}}</th>
                                </tr>
                            </thead>
                        </table><br>
                        <center><h5><u><b>Eating Habits Screening Form</b></u></h5></center>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col" class="text-left">1. Will you eat more when you feel stressed after bariatric surgery?</th>                                          
                                    <th scope="col" class="text-left">{{this.eat1}}</th>
                                </tr>
                            </thead>
                            <thead>
                                <tr>
                                    <th scope="col" class="text-left">2. Do you always feel hungry after bariatric surgery?</th>                                               
                                    <th scope="col" class="text-left">{{this.eat2}}</th>
                                </tr>
                            </thead>
                            <thead>
                                <tr>
                                    <th scope="col" class="text-left">3. Do you have trouble to follow the dietary advice given by the dietitian after bariatric surgery?</th>                                               
                                    <th scope="col" class="text-left">{{this.eat3}}</th>
                                </tr>
                            </thead>
                            <thead>
                                <tr>
                                    <th scope="col" class="text-left">4. Do you have trouble to control the number of snacks consumed after bariatric surgery?</th>                                               
                                    <th scope="col" class="text-left">{{this.eat4}}</th>
                                </tr>
                            </thead>
                            <thead>
                                <tr>
                                    <th scope="col" class="text-left">5. Do you always think about food?</th>                                               
                                    <th scope="col" class="text-left">{{this.eat5}}</th>
                                </tr>
                            </thead>
                                                            
                        </table>  
                    </div>
                </div>
                {{/each}}
            </div>
        </div>	
    </div>
</section>


